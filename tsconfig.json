{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2016",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": ".",
    "rootDirs": ["src"],
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "types/**/*.d.ts", "rollup.config.ts", "rollup.config.dev.ts"],
  "exclude": ["node_modules", "dist", "scripts", "examples"]
}
